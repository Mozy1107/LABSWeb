@page
@model Rabota1.Pages.Movies.IndexModel

@{
    ViewData["Title"] = "Автомобили";
}

<div class="chat-hero">
    <div class="container-lg">
        <h1><i class="fas fa-car me-2"></i>Каталог автомобилей</h1>
        <p class="text-subtitle">Управление и поиск автомобилей в базе данных</p>
    </div>
</div>

<div class="container-lg py-5">
    <div class="mb-4">
        <a asp-page="Create" class="btn btn-primary-gradient btn-lg">
            <i class="fas fa-plus-circle me-2"></i>Добавить новый автомобиль
        </a>
    </div>

    <div style="background: white; border-radius: 12px; padding: 2rem; box-shadow: 0 4px 6px rgba(0,0,0,0.1); margin-bottom: 2rem;">
        <h5 class="mb-4"><i class="fas fa-search me-2"></i>Фильтр и Поиск</h5>
        <form method="get">
            <div class="row g-3 mb-3">
                <div class="col-md-4">
                    <label class="form-label fw-600">Тип автомобиля:</label>
                    <select asp-for="SelectedCarType" asp-items="Model.CarTypes" class="form-select form-select-lg">
                        <option value="">Все типы</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label class="form-label fw-600">Марка/Модель:</label>
                    <input type="text" asp-for="SearchString" class="form-control form-control-lg" placeholder="Поиск по названию..." />
                </div>
                <div class="col-md-4">
                    <label class="form-label">&nbsp;</label>
                    <div class="d-grid gap-2 d-md-flex">
                        <button type="submit" class="btn btn-primary-gradient flex-grow-1">
                            <i class="fas fa-search me-2"></i>Найти
                        </button>
                        <a asp-page="./Index" class="btn btn-secondary flex-grow-1">
                            <i class="fas fa-redo me-2"></i>Сбросить
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>

    @if (Model?.Car != null && Model.Car.Count() > 0)
    {
        <div class="table-responsive" style="background: white; border-radius: 12px; overflow: hidden; box-shadow: 0 4px 6px rgba(0,0,0,0.1);">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th style="border-radius: 12px 0 0 0;"><i class="fas fa-car me-2"></i>Марка</th>
                        <th><i class="fas fa-cube me-2"></i>Модель</th>
                        <th><i class="fas fa-calendar me-2"></i>Год выпуска</th>
                        <th><i class="fas fa-tag me-2"></i>Тип</th>
                        <th><i class="fas fa-dollar-sign me-2"></i>Цена</th>
                        <th style="border-radius: 0 12px 0 0; text-align: center;"><i class="fas fa-cogs me-2"></i>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Car)
                    {
                        <tr>
                            <td><strong>@item.Brand</strong></td>
                            <td>@item.Model</td>
                            <td>@item.Year</td>
                            <td><span class="badge bg-info">@item.CarType</span></td>
                            <td>₽@String.Format("{0:N0}", item.Price)</td>
                            <td style="text-align: center;">
                                <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                    <i class="fas fa-eye me-1"></i>Просмотр
                                </a>
                                <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-success">
                                    <i class="fas fa-edit me-1"></i>Редакт.
                                </a>
                                <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                    <i class="fas fa-trash me-1"></i>Удалить
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div style="background: white; border-radius: 12px; padding: 3rem; text-align: center; box-shadow: 0 4px 6px rgba(0,0,0,0.1);">
            <i class="fas fa-inbox" style="font-size: 3rem; color: #ccc; margin-bottom: 1rem;"></i>
            <p class="text-muted" style="font-size: 1.1rem;">Автомобили не найдены. Добавьте новый автомобиль, чтобы начать.</p>
            <a asp-page="Create" class="btn btn-primary-gradient">
                <i class="fas fa-plus-circle me-2"></i>Добавить автомобиль
            </a>
        </div>
    }
</div>
