@page
@model Rabota1.Pages.Movies.DetailsModel

@{
    ViewData["Title"] = "Детали автомобиля";
}

<style>
    .detail-hero {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 3rem 0;
        margin-bottom: 2rem;
        border-radius: 10px;
        box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4);
    }

    .detail-hero h1 {
        font-size: 2.5rem;
        font-weight: bold;
        margin-bottom: 0.5rem;
    }

    .detail-hero p {
        font-size: 1.1rem;
        opacity: 0.95;
    }

    .detail-card {
        background: white;
        border-radius: 10px;
        padding: 2rem;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
        margin-bottom: 2rem;
    }

    .detail-field {
        margin-bottom: 1.5rem;
        padding-bottom: 1.5rem;
        border-bottom: 1px solid #eee;
    }

    .detail-field:last-child {
        border-bottom: none;
        margin-bottom: 0;
        padding-bottom: 0;
    }

    .detail-label {
        font-weight: 600;
        color: #667eea;
        font-size: 0.95rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 0.5rem;
        display: block;
    }

    .detail-value {
        font-size: 1.2rem;
        color: #333;
        word-break: break-word;
    }

    .action-buttons {
        display: flex;
        gap: 1rem;
        margin-top: 2rem;
        flex-wrap: wrap;
    }

    .btn-primary-gradient {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        color: white;
        padding: 0.75rem 1.5rem;
        border-radius: 8px;
        font-weight: 600;
        transition: transform 0.2s, box-shadow 0.2s;
        text-decoration: none;
        display: inline-block;
    }

    .btn-primary-gradient:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
        color: white;
    }

    .btn-secondary-light {
        background: #f8f9fa;
        border: 2px solid #ddd;
        color: #666;
        padding: 0.75rem 1.5rem;
        border-radius: 8px;
        font-weight: 600;
        transition: all 0.2s;
        text-decoration: none;
        display: inline-block;
    }

    .btn-secondary-light:hover {
        background: white;
        border-color: #667eea;
        color: #667eea;
    }
</style>

<div class="detail-hero">
    <div class="container">
        <h1><i class="fas fa-car" style="margin-right: 0.5rem;"></i>@Model.Car.Brand @Model.Car.Model</h1>
        <p>Просмотр полной информации об автомобиле</p>
    </div>
</div>

<div class="container">
    <div class="detail-card">
        <div class="detail-field">
            <span class="detail-label"><i class="fas fa-car" style="margin-right: 0.5rem;"></i>Марка</span>
            <div class="detail-value">@Model.Car.Brand</div>
        </div>

        <div class="detail-field">
            <span class="detail-label"><i class="fas fa-cube" style="margin-right: 0.5rem;"></i>Модель</span>
            <div class="detail-value">@Model.Car.Model</div>
        </div>

        <div class="detail-field">
            <span class="detail-label"><i class="fas fa-calendar" style="margin-right: 0.5rem;"></i>Год выпуска</span>
            <div class="detail-value">@Model.Car.Year</div>
        </div>

        <div class="detail-field">
            <span class="detail-label"><i class="fas fa-tag" style="margin-right: 0.5rem;"></i>Тип</span>
            <div class="detail-value">@Model.Car.CarType</div>
        </div>

        <div class="detail-field">
            <span class="detail-label"><i class="fas fa-dollar-sign" style="margin-right: 0.5rem;"></i>Цена</span>
            <div class="detail-value">₽@Model.Car.Price.ToString("F0")</div>
        </div>
    </div>

    <div class="action-buttons">
        <a asp-page="./Edit" asp-route-id="@Model.Car.Id" class="btn-primary-gradient">
            <i class="fas fa-edit" style="margin-right: 0.5rem;"></i>Изменить
        </a>
        <a asp-page="./Index" class="btn-secondary-light">
            <i class="fas fa-arrow-left" style="margin-right: 0.5rem;"></i>Назад к списку
        </a>
    </div>
</div>
