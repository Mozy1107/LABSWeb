@page
@model Rabota2.Pages.Inzhenery.IndexModel

@{
    ViewData["Title"] = "Специалисты по продажам";
}

<h1>Специалисты по продажам</h1>

<p>
    <a asp-page="Create" class="btn btn-success">Добавить специалиста</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Имя</th>
            <th>Уровень квалификации</th>
            <th>Отдел продаж</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Inzhener) {
        <tr>
            <td>@item.Name</td>
            <td>@item.Kvalifikaciya</td>
            <td>@item.Podrazdelenie</td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Изменить</a>
                <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Детали</a>
                <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
