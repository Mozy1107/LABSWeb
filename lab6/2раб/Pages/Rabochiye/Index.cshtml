@page
@model Rabota2.Pages.Rabochiye.IndexModel

@{
    ViewData["Title"] = "Механики";
}

<h1>Механики автосалона</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Добавить механика</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Имя</th>
            <th>Специализация</th>
            <th>Отдел обслуживания</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Rabochiy) {
        <tr>
            <td>@item.Name</td>
            <td>@item.Specialnost</td>
            <td>@item.Ceh</td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Изменить</a>
                <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Детали</a>
                <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
