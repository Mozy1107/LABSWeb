@page
@model Rabota2.Pages.Administraciya.IndexModel

@{
    ViewData["Title"] = "Управление";
}

<h1>Управление автосалоном</h1>

<p>
    <a asp-page="Create" class="btn btn-warning">Добавить сотрудника</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Имя</th>
            <th>Должность</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Administraciya) {
        <tr>
            <td>@item.Name</td>
            <td>@item.Dolzhnost</td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Изменить</a>
                <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Детали</a>
                <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
